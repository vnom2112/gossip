<html>
<head>
	<link rel="stylesheet" type="text/css" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="bower_components/bootstrap/dist/css/bootstrap-theme.min.css">

	
</head>
<body>
	<div class="row">
		<div class="col-md-4">&nbsp;</div>
		<div class="col-md-4">
			<div class="panel panel-primary" style="margin-top: 30px">
				<div class="panel-title text-center">
					<h2>Brady's Gossip Protcol App</h2>
				</div>
				<div class="panel-body">
					<div class="input-group" style="margin-bottom: 15px">
					  <span class="input-group-addon" id="basic-addon1">ID:</span>
					  <input type="text" id="nodeIdInput" class="form-control" placeholder="Node ID" aria-describedby="basic-addon1">
					</div>
					<a href="javascript:void(0)" id="createNodeButton" class="btn btn-primary btn-lg pagination-center center-block">
					  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  Create Node
					</a>
				</div>
			</div>
		</div>
		<div class="col-md-4">&nbsp;</div>
	</div>
	<script src="bower_components/jquery/dist/jquery.min.js" type="text/javascript"></script>
	<script src="bower_components/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
	<script>
		$(document).ready(function () {
			$('#createNodeButton').on('click', function() {
				var nodeID = $('#nodeIdInput').val();
				if(nodeID != "") {
					window.location.href = '/dashboard/' + nodeID;	
				}
			});
		});
	</script>
</body>
<html>